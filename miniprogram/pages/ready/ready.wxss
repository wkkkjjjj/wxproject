page {
  height: 100%;
}

.coat {
  position: relative;
  background-color: #cfcfc4;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}

.background {
  position:absolute;
  width: 100%;
  height: 100%;
}

.icon {
    position:absolute;
    top:650rpx;
}

.form {
    position:absolute;
}

.form-item {
  margin: 90rpx;
  padding:30rpx;
  background-color:rgb(0,0,139,0.5);
  border-radius:12%;
}

.tip {
    color:white;
    font-size:40rpx;
    font-weight: bold;
}

.btn {
    margin:200rpx;
    width:300rpx;
    height:80rpx;
    font-size: 34rpx;
    font-weight: bold;
    background-color:rgb(118,215,234,0.5);
